{% raw %}\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{mypage}

\def\course#1{\gdef\@course{#1}}
\def\@course{\@latex@warning@no@line{No \noexpand\course given}}
\def\coursenum#1{\gdef\@coursenum{#1}}
\def\@coursenum{\@latex@warning@no@line{No \noexpand\coursenum given}}
\def\student#1{\gdef\@student{#1}}
\def\@student{\@latex@warning@no@line{No \noexpand\student given}}
\def\studentnum#1{\gdef\@studentnum{#1}}
\def\@studentnum{\@latex@warning@no@line{No \noexpand\studentnum given}} 

\newcommand\mytitlepage{%
